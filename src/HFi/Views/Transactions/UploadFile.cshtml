@model dynamic

@{
    ViewBag.Title = "Загрузка выписки";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("LoadFile","Transactions", FormMethod.Post, new {enctype="multipart/form-data"}))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            @Html.Label("Файл", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
               <input type="file" name="uploadedFile" id="uploadedFile" class="form-control"/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("назад", "Index", "Transactions")
</div>
