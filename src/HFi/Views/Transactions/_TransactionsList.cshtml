@model IEnumerable<HFi.Models.Transaction>

<table class="table">
    <tr>
        <th>
            Дата платежа
        </th>
        <th>
            Контрагент
        </th>
        <th>
            Назначение
        </th>
        <th>
            Сумма платежа
        </th>
        <th>
            Категория
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Date.ToShortDateString()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Source)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Purpose)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "glyphicon glyphicon-edit" }) |
                @Ajax.ActionLink(" ", "Delete", new { Id = item.Id }, new AjaxOptions { Confirm = "Удалить?", InsertionMode = InsertionMode.Replace, UpdateTargetId = "transactions-container" }, new { @class = "glyphicon glyphicon-remove" })
            </td>
        </tr>
    }

</table>
