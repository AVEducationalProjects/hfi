@model IEnumerable<HFi.Models.Transaction>

@{
    ViewBag.Title = "Список платежей";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Добавить", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            Дата платежа
        </th>
        <th>
            Контрагент
        </th>
        <th>
            Назначение
        </th>
        <th>
            Сумма платежа
        </th>
        <th>
            Категория
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Source)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Purpose)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category.Name)
        </td>
        <td>
            @Html.ActionLink(" ", "Edit", new { id=item.Id }, new {@class= "glyphicon glyphicon-edit" }) |
            @Html.ActionLink(" ", "Delete", new { id=item.Id }, new { @class = "glyphicon glyphicon-remove" })
        </td>
    </tr>
}

</table>
