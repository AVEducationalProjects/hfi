@model IList<HFi.Models.Plan>

<table class="table">
    <tr>
        <th>
            Год
        </th>
        <th>
            Название
        </th>
        <th>
            Изменен
        </th>
        <th>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Year.ToString(), "YearPlan", new {Id=item.Id})
            </td>
            <td>
                @item.Name
            </td>
            <td>
                @item.LastChanged.ToShortDateString()
            </td>
            <td>
                @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "glyphicon glyphicon-edit" }) |
                @Ajax.ActionLink(" ", "Delete", new { Id = item.Id }, new AjaxOptions { Confirm = "Удалить?", InsertionMode = InsertionMode.Replace, UpdateTargetId = "plans-container" }, new { @class = "glyphicon glyphicon-remove" })
            </td>
        </tr>
    }

</table>
